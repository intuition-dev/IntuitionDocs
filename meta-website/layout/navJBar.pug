script.
   depp.require(['pre','deviceready'], setupNav) 

   function setupNav() {
      console.log('navJBar')
      new Navbar('.navJBar') // top

      //toggle
      $( "#navBarCont" ).click(function() { //side
         console.log(isOpen)
         if(isOpen)
            navClose()
         else
            navOpen()
      })
   }//ready

   isOpen = false
   function navOpen() {
      let $clone= $("#navJBar").clone(true)
      $clone.removeClass('hide-lg')
      $('#navOpen').html($clone)
      new Navbar('#navOpen')
      $('.navFirst').addClass('open')
      $('.navFirst').addClass('open-position')
      isOpen = true
   }
   function navClose() {
      $('#navOpen').empty()
      $('.navFirst').removeClass('open')
      $('.navFirst').removeClass('open-position')
      isOpen = false
   }

