    style.
        body {
            counter-reset: lic;
        }
        ol {
            list-style-type: none;
        }
        ol > li {
            position:relative; /* Create a positioning context */
            margin:0 0 6px 2em; /* Give each list item a left margin to make room for the numbers */
            padding:4px 8px; /* Add some spacing around the content */
            padding-left: 4px;
            border-top:1px solid #979797;
            background: #f6f6f6;
            min-height: 50px;
        }
        ol > li:before {
            /* Position and style the number */
            position:absolute;

            counter-increment:lic; /* Increment the counter by 1 */
            content:counter(lic); /* Use the counter as content */

            top:-6px;
            left:-44px;
            width:2rem;
          
            text-align:center;
            color:#999;
            
            font: italic 28px/1.5 "Helvetica Neue", Arial, sans-serif;
        }

