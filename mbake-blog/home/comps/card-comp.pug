card-comp
  .cards-container 
    .columns
      virtual(each='{items}')
        .column.col-4.col-md-6.col-.col-sm-12
          .card
            .card-image
              a(href='{url}')
                img.img-responsive(src='{image}')
            .card-header
              .card-title.h5 { title }
              .card-subtitle.text-gray 
                i.far.fa-clock 
                |  { date }
            .card-body { content_text }
            .card-footer
              button.btn.btn-primary { tags }

  script.
    console.info('oh hi tag');
    this.on('*', function(evt) {
        console.info('riot', evt);
    });
    this.items = [];
    thiz = this;

    render(data) {
        console.info(data);
        if(!data ) {
            thiz.items = [];
            thiz.update();
            return;
        }
        console.info(Object.keys(data[0]));
        // clone
        let cloned = JSON.parse(JSON.stringify(data));
        thiz.items = cloned;
        
        let sz = thiz.items.length;
        for(i = 0; i < sz; i++) {
              var item = thiz.items[i];

              item.url = '/posts/' + item.url;
              console.info(item.url);
          }

        thiz.update();

    }
