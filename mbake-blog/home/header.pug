mixin link(path, name)
  a.btn.btn-link(href=path)= name

mixin social()
  a.social-icon(href='#')
    i(class!=attributes.class)

.off-canvas.flex-centered
  a.off-canvas-toggle.btn.btn-primary.btn-action.show-md(href='#sidebar-id')
    i.icon.icon-menu
      
  #sidebar-id.off-canvas-sidebar
    ul.nav
      li.nav-item.active
        +link(ROOT + 'home', 'home')
      li.nav-item
        +social(class="fab fa-facebook-f")
        +social(class="fab fa-instagram")
        +social(class="fab fa-twitter")
        +social(class="fab fa-google-plus-g")
    
  a.off-canvas-overlay(href='#close')
  
  .off-canvas-content.px-2
      header.navbar
        section.navbar-section
          a.mr-2.navbar-brand(href=ROOT + 'home')
            img.img-responsive(src=ROOT + 'assets/img/blog/logo.png')
        section.navbar-section.hide-md
          +link(ROOT + 'home', 'home')
          +social(class="fab fa-facebook-f")
          +social(class="fab fa-instagram")
          +social(class="fab fa-twitter")
          +social(class="fab fa-google-plus-g")
            
