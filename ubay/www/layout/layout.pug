doctype html
html
    head        
       script(src='https://cdn.jsdelivr.net/gh/intuition-dev/intuServices@v1911.2/webLib/gmetrics.js')

        include headFrag
        include ops

        script.
            ROOT = '#{ROOT}'; //- sets global pug and .js from dat.yaml
            //- console.info('root','#{ROOT}');
        meta(name='description', content=content_text)

        //- Schema.org markup for Google+

        meta(itemprop='name', content=title)
        meta(itemprop='description', content=content_text)
        meta(itemprop='image', content=image)
        meta(name='keywords', content=keywords)

        //- Twitter Card data
        meta(name='twitter:title', content=title)
        meta(name='twitter:description', content=content_text)
        //- Twitter summary card with large image must be at least 280x150px
        meta(name='twitter:image', content=image)

        //- Open Graph data
        meta(property='og:title', content=title)
        meta(property='og:image', content=image)
        
        link(rel='shortcut icon', href= ROOT + 'favicon.ico', type='image/x-icon')

        //- top css layout
        link(href=ROOT + 'assets/css/spectreTop.css', rel='stylesheet', type='text/css') 

        //- in case a page needs it:
        block head2
        
        script(src='/layout/navJBar.js')
 
    body
        script(src= '/assets/js/UI-loader.js', defer='')
        
        //- manually include /layout/nav
        block top

