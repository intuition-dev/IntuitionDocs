    style.
        /* video detach button 
        //  video popout
         https://css-tricks.com/custom-controls-in-html5-video-full-screen/
        */
        ::-webkit-media-controls {
            display:none !important;
        }
        video::-webkit-media-controls-enclosure {
           display:none !important;
        }

        * { margin: 0; padding: 0; }
        html, body { 
            width: 100%; 
            height: 100%; 
        }
        .pgCont {
            display: flex;
            flex-direction: column;
            height: 100vh;
            max-height: 100vh;
        }
        .top {
            height: 50px; /** *C* */
            border-bottom: 1px solid black;
        }
        .main {
            display: flex; /* 2nd fle level */
            flex-grow: 1; 
        }

        #left {
            width: calc(100% - 200px); /** *C* */
    
            display: flex; /* 3rd flex level */
            flex-direction: column;

            border:  2px solid yellow;
            background: gray;	
        }
        #right {
            border-left: 1px solid black;
        }

        .mediaContainerTop { /* fluid */
            flex-grow: 0;
            position: relative;
            
            border:  2px solid red;
            background: silver;	
        }
        .mainBot {
            flex-grow: 1;

            border:  2px solid blue;
            background: #eee;	           
            min-height: 25px;

            border-top: 1px solid black;
        }


    script.
        // https://codetheory.in/html5-fullscreen-background-video/
        window.addEventListener('resize', resizeVid) 
        function resizeVid() {
            var w = $(window).width() - 200 
            var h = $(window).height() - 50

            // math?
            var nw = 16
            var nh = 0
            while (nw <= w) {
                nh = nw * 0.5625
                if( (nh+25+15) > h) break
                nw = nw + 1
            }

            console.log('c:', w, h, nw, nh)       
            nw = nw-50

            $('.mediaContainerTop').width( nw)
            $('.mediaContainerTop').height( nh )

            console.log('<<<')
        }//()


